{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-console": "off",  // Console statements ko warning dega
    "semi": ["error", "always"],  // Semicolon ki requirement
    "quotes": ["error", "single"],  // Single quotes ka istemal
    "@typescript-eslint/no-explicit-any": "warn"  // 'any' type par warning
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}
